<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/styles.css">
    <title>To Do List</title>
</head>
<body>
    <div class="box">
        <form class="item" action="/" method="post">
            <input type="text" name="task" placeholder="Add tasks here">
            <button>+</button>
        </form>
        <ul>
            <% for(var i=0;i<tasks.length;i++){ %>
                <form action="/delete" method="post">
                    <div class="item">
                        <input type="checkbox" name="checkbox" value="<%= tasks[i].id%>" onchange="this.form.submit()">
                        <p><%= tasks[i].task %></p>
                    </div>
                </form>
            <% } %>
        </ul>
    </div>
</body>
</html>